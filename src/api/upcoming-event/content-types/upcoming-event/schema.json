    },
    "text": {
      "type": "richtext",
      "required": true
    },
    "datetime": {
      "type": "datetime",
      "default": "2023-01-01T05:00:00.000Z"
    },
    "image": {
      "allowedTypes": [
        "images",
        "videos",
        "audios"
      ],
      "type": "media",
      "multiple": false
    }
  }
}
